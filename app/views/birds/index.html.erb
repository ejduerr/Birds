<div class="container">
  <%= render 'welcome/heading' %>

  <% @birds.each do |bird| %>
    <div class="row">
      <div class="underlined_search">
        <div class="span4">
          <%= link_to image_tag(bird.primary_image.url(:tiny)), bird %>
        </div>

        <div class="span4">
          <strong><%= bird.common_name %></strong>
          <br />
          <em><%= bird.scientific_name %></em>
        </div>

        <div class="span4">
          <%= bird.chinese_name %>
          <br />
          <%= bird.tibetan_name %>
        </div>
      </div>
    </div>
  <% end %>
</div>
