<div class="container_12">
	<div class="grid_10">
		<div class="grid_5 alpha">
			 <%= image_tag @chapter.main_image.url(:main) %> 
		</div>
		<div class="grid_5 omega">
			 <%= @chapter.name %>
			 <p>
				<%= @chapter.chinese_name %>
			 </p>
		</div>
		<div class="clear"></div>
		<div class="grid_10 alpha omega">
			<div>
				<b>English story:</b>
				<%= @chapter.english_story %>
			</div>	

			<div>
				<b>Chinese story:</b>
				<%= @chapter.chinese_story %>
			</div>
			
			<div>
				<b>Tibetan story:</b>
				<%= @chapter.tibetan_story %>
			</div>
			
		</div>
		<div class="clear"></div>

		<div class="grid_10 alpha omega">
			
			<div>
				<b>English description:</b>
				<%= @chapter.english_description %>
			</div>
			
			<div>
				<b>Chinese description:</b>
				<%= @chapter.chinese_description %>
			</div>
		</div>
		<div class="clear"></div>
	
	</div>		
	<div class="grid_2">
		
		<% @chapter.birds.each do |bird| %>
			<%= link_to bird.common_name, bird %>
		<% end %>
		
	</div>
	<div class="clear"></div>
</div>
