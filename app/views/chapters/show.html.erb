<div class="container-fluid">
  <%= render 'welcome/heading' %>
  	<p id="fluid"> </p> 
  <div class="row-fluid">
    <!--<div class="grid_12 alpha"> -->
      <h4 style="font-family: 'Libre Baskerville', serif;"><%= @chapter.name %> </h4> 
      <h4 style="font-family: 'Libre Baskerville', serif;"><%= @chapter.chinese_name %></h4>  
  </div>

    <div class="span6">
      <div class="chapter_bird_thumb_container">
      <h5>Bird List<h5>   
        <ul>
          <% @chapter.birds.each do |bird| %>
            <%= render "chapter_bird_thumb", bird: bird %>
          <% end %>
        </ul>
         QUICK SEARCH <input type="text"></input>
      </div>
      <div class="clear"></div>
    </div>

    <div class="span6">
	  <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab1" data-toggle="tab">Description</a></li>
		  <li><a href="#tab2" data-toggle="tab">Chinese</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="Description">
			<p><%=Redcarpet::Markdown.new(Redcarpet::Render::HTML).render( @chapter.english_description).html_safe %></p>
          </div>
          <div class="tab-pane" id="Chinese">
			<p><%=Redcarpet::Markdown.new(Redcarpet::Render::HTML).render( @chapter.chinese_description).html_safe %></p>
          </div>
        </div>
      </div>
    </div>

  <br> <br/>
  <br> <br/>

  <div class="row-fluid"> 
    <div class="span6">
      <div class="tabs">
        <ul>
          <li><a href="#tabs-1">Story</a></li>
          <li><a href="#tabs-2">Chinese</a></li>
          <li><a href="#tabs-3">Tibetan</a></li>
        </ul>
        <div id="tabs-1">
          <%=Redcarpet::Markdown.new(Redcarpet::Render::HTML).render( @chapter.english_story).html_safe %>
        </div>
        <div id="tabs-2">
          <%=Redcarpet::Markdown.new(Redcarpet::Render::HTML).render( @chapter.chinese_story).html_safe %>
        </div>
        <div id="tabs-3">
          <%=Redcarpet::Markdown.new(Redcarpet::Render::HTML).render( @chapter.tibetan_story).html_safe %>
        </div>
      </div>
      <div class="clear"></div>
    </div>
    <div class="span6">
      <%= image_tag @chapter.main_image.url(:main) %>
    </div>

  </div>

</div>
  <div class="clear"></div>

