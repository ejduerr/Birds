<div class="container_12">
	<%= render 'welcome/heading' %>
  
    <div class="grid_12">
	    <div style="padding: 0 150px;">
		<ul class="bxslider">
		<% Banner.all.each do |banner| %>
			<li><%=link_to image_tag(banner.main_image.url, id: banner.id), banner.bird %></li>
		<% end %>
		</ul>
	</div>
  </div>
  
  <div class="clear"></div>
  
  <% Chapter.all.each do |chapter| %>
	<div class="grid_2"><%=link_to image_tag(chapter.main_image.url(:thumb), id: chapter.id), chapter %></div>
  <% end %>
  <div class="clear"></div>
  
  <br />  <br />
   
  <% birds = Bird.all.shuffle %>
  
  <% birds[0...18].each_slice(6) do |bird_row| %>
	<% bird_row.each do |bird| %>
		<div class="grid_2"><%=link_to image_tag(bird.primary_image.url(:thumb), id: bird.id), bird %></div>
	<% end %>
	<div class="clear"></div>
  <% end %>
</div>