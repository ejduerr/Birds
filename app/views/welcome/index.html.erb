<div class="container_12">
  <div class="grid_4 push_2">
    <h1 style="font-family: 'Libre Baskerville', serif;">Birds of Shangrila </h1> 
  </div>
  <div class="grid_4 push_3">
    <%= render 'birds/search' %>
  </div>
  <div class="clear"></div>
   
  <div class="grid_12">
	    <div style="padding: 0 150px;">
		<ul class="bxslider">
			<li><%=image_tag("banner/Fantail.JPG")%></li>
			<li><%=image_tag("banner/Rosefinch.JPG")%></li>
			<li><%=image_tag("banner/Sunbird.JPG")%></li>
			<li><%=image_tag("banner/Tit.JPG")%></li>
			<li><%=image_tag("banner/Pkeet.JPG")%></li>
			<li><%=image_tag("banner/Yuhina.JPG")%></li>
		</ul>
	</div>
  </div>
  
  <div class="clear"></div>
  

 
  
  <% birds = Bird.all.shuffle %>
  
  <% birds[0...18].each_slice(6) do |bird_row| %>
	<% bird_row.each do |bird| %>
		<div class="grid_2"><%=link_to image_tag(bird.primary_image.url(:thumb), id: bird.id), bird %></div>
	<% end %>
	<div class="clear"></div>
  <% end %>
</div>